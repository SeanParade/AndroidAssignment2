<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context="com.gbc.a2101015020.LoginActivity">

    <ImageView
        android:id="@+id/halthImageView"
        android:layout_width="256dp"
        android:layout_height="261dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_halth"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="62dp" />

    <TextView
        android:id="@+id/halthTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/halthImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="207dp"
        android:fontFamily="monospace"
        android:text="HALTH"
        android:textColor="@color/white"
        android:textSize="70sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/halthTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="textWebEditText"
        android:text="Username"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/usernameEditText"
        android:layout_below="@+id/usernameEditText"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/passwordEditText"
        android:layout_marginTop="19dp"
        android:background="@color/blue"
        android:onClick="onLoginClick"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="24sp" />
</RelativeLayout>
