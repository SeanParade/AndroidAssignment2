<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:padding="20sp"
    tools:context="com.gbc.a2101015020.EnterTestActivity">

    <TextView
        android:id="@+id/enter_test_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Please Enter Test Details"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/test_form" />

    <Button
        android:id="@+id/submit_test_button"
        android:layout_width="346dp"
        android:layout_height="60sp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/white"
        android:text="Enter Test"
        android:textColor="@color/orange"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/test_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:padding="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/submit_test_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165">

        <TextView
            android:id="@+id/patient_id_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="Patient ID: "
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/patient_id_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:backgroundTint="@color/Lowlight"
            android:inputType="number"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/bpl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="BPL: "
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/bpl_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:backgroundTint="@color/Lowlight"
            android:inputType="number"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/bph_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="BPH: "
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/bph_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:backgroundTint="@color/Lowlight"
            android:inputType="number"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/temperature_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Temperature: "
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/temperature_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:backgroundTint="@color/Lowlight"
            android:inputType="numberDecimal"
            android:textSize="30sp" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>